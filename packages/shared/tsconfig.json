{
    "extends": "@bms/typescript-config/base.json",
    "compilerOptions": {
        "target": "esnext",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}